
@{
    ViewData["Title"] = ViewBag.Country;
}
<h1>@ViewBag.Country</h1>

<div class="container text-center my-3">
    <div class="row mx-auto my-auto">
        <div id="Gallery" class="carousel slide w-100" data-ride="carousel">
            <div class="carousel-inner w-100" role="listbox">
                @{
                    string __class;
                    foreach (String img in ViewBag.images)
                    {
                        String[] filepath = img.Split("\\");
                        String filename = filepath[filepath.Length - 1];
                        String path = $"~/img/{ViewBag.Country}/gallery/{filename}";

                        if (Array.IndexOf(ViewBag.images, img) == 0) __class = "carousel-item active";
                        else __class = "carousel-item";

                        <div class="@__class">
                            <div class="col-md-4">
                                <img class="gallery_generic" src="@path" asp-append-version="true">
                            </div>
                        </div>


                    }
                }
            </div>
            <a class="carousel-control-prev w-auto" href="#Gallery" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon bg-dark border border-dark rounded-circle" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next w-auto" href="#Gallery" role="button" data-slide="next">
                <span class="carousel-control-next-icon bg-dark border border-dark rounded-circle" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div class="card-deck">
    @{
        foreach (var player in ViewBag.Team)
        {
            <div class="playerCard postal mx-auto">
                <div class="row">
                    <div class="col-sm">
                        <img src="@player.Thumb" asp-append-version="true" class="card-img-top img-fluid" alt="@player.Name">
                    </div>
                    <div class="col-sm">
                        <div class="card-body">
                            <h4 class="card-title">@player.Name</h4>
                            <p class="card-text"> @player.Position </p>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="text-muted" style="font-size: 80px; margin:2%;">@player.Number</div>
                    </div>
                </div>
            </div>
        }
    }

</div>